<Window x:Class="ControleDeEstoque.View.EscolherUsuarioParaEdicao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleDeEstoque.View"
        mc:Ignorable="d"
        Title="Usuário para edição" Height="125" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Content="Editar" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Top" Width="75" Margin="0,0,10,0" Click="EditarUsuario"/>
        <Label Content="Usuário" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox x:Name="ListaDeUsuarios" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="206" Margin="0,10,0,9"/>

    </Grid>
</Window>

<Window x:Class="ControleDeEstoque.View.RegistrarSaídaLote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleDeEstoque.View"
        mc:Ignorable="d"
        Title="Registrar saída de lote" Height="144.699" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LabelNumeroLote" Content="Número do lote" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <Button Content="Registrar" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" Width="75" Click="BtnRegistrar"/>
        <TextBox x:Name="NumeroLote" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" Width="165" Margin="0,14" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
